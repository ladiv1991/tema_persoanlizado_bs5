{% stories ProgressBar with {
  "title": "Atoms/Progress Bar",
  "parameters": {
    "componentSubtitle": "Bootstrap Progress bar Component",
    "docs": {
      "description": {
        "component": "Bootstrap custom progress bars featuring support for stacked bars, animated backgrounds, and text labels."
      },
      "story": {
        "inline": true
      }
    }
  },
  "argTypes": {
    "color": {
      "name": "Progress Bar Color",
      "description": "Use background utility classes to change the appearance of individual progress bars.",
      "defaultValue": "bg-secondary",
      "control": "select",
      "options": {
        "'- none -'": "",
        "Primary": "bg-primary",
        "Secondary": "bg-secondary",
        "Success": "bg-success",
        "Info": "bg-info",
        "Warning": "bg-warning",
        "Danger": "bg-danger",
        "Light": "bg-light",
        "Dark": "bg-dark",
        "Black": "bg-black",
        "White": "bg-white",
        "Body": "bg-body",
        "Transparent": "bg-transparent",
        "'Opacity 10'": "bg-opacity-10",
        "'Opacity 25'": "bg-opacity-25",
        "'Opacity 50'": "bg-opacity-50",
        "'Opacity 75'": "bg-opacity-75",
        "'Opacity 100'": "bg-opacity-100",
        "Gradient": "bg-gradient"
      }
    },
    "striped": {
      "name": "Striped",
      "description": "Add `.progress-bar-striped` to any `.progress-bar` to apply a stripe via CSS gradient over the background color.",
      "defaultValue": true,
      "control": "boolean"
    },
    "animated": {
      "name": "Animated",
      "description": "The striped gradient can also be animated. Add `.progress-bar-animated` to `.progress-bar` to animate the stripes right to left via CSS3 animations.",
      "defaultValue": true,
      "control": "boolean"
    },
    "label": {
      "name": "Label",
      "description": "Add labels to your progress bars by placing text within the `.progress-bar`.",
      "control": "text",
      "defaultValue": ""
    },
    "percent": {
      "name": "Percent",
      "description": "The percentage of the progress between 1 to 100.",
      "control": "number",
      "min": 0,
      "max": 100,
      "step": 1,
      "defaultValue": 0
    },
    "message": {
      "name": "Message",
      "description": "A string containing information to be displayed.",
      "control": "text",
      "defaultValue": ""
    },
    "progress_bar_utility_classes": {
      "name": "Utility Classes",
      "description": "An array of utility classes that can be used to add extra Bootstrap utility classes or custom classes to this component.",
      "control": "object",
      "defaultValue": []
    },
    "wrapper_attributes": {
      "name": "Wrapper Attributes",
      "description": "HTML attributes for the Progress Bar wrapper element.",
      "control": "object",
      "defaultValue": {}
    },
    "indicator_attributes": {
      "name": "Indicator Attributes",
      "description": "HTML attributes for the Progress Bar indicator element.",
      "control": "object",
      "defaultValue": {}
    },
    "label_attributes": {
      "name": "Label Attributes",
      "description": "HTML attributes for the  element.",
      "control": "object",
      "defaultValue": {}
    },
    "message_attributes": {
      "name": "Message Attributes",
      "description": "HTML attributes for the Progress Bar message element.",
      "control": "object",
      "defaultValue": {}
    }
  }
} %}

