{% stories Icon with {
  "title": "Atoms/Icon",
  "parameters": {
    "componentSubtitle": "Bootstrap Icon Component",
    "docs": {
      "description": {
        "component": "A generic icons for use in the site."
      },
      "story": {
        "inline": true
      }
    }
  },
  "argTypes": {
    "name": {
      "name": "Icon name",
      "description": "The name of the icon in Bootstrap Icon library. (https://icons.getbootstrap.com)",
      "defaultValue": "",
      "control": "text",
      "default": ""
    },
    "role": {
      "name": "Role",
      "description": "The accessibility role for the icon as string. (https://icons.getbootstrap.com/#accessibility)",
      "defaultValue": "",
      "control": "text",
      "default": ""
    },
    "rtl": {
      "name": "RTL Icon name",
      "description": "If needed, The name of the Right to Left (RTL) icon replacement Bootstrap Icon for the default LTR one.",
      "defaultValue": "",
      "control": "text",
      "default": ""
    },
    "icon_utility_classes": {
      "name": "Utility Classes",
      "description": "An array of utility classes that can be used to add extra Bootstrap utility classes or custom classes to this component.",
      "control": "object",
      "defaultValue": []
    },
    "attributes": {
      "name": "Attributes",
      "description": "HTML attributes for the containing element.",
      "control": "object",
      "defaultValue": {}
    }
  }
} %}

