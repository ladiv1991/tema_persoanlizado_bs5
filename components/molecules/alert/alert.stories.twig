{% stories Alert with {
  "title": "Molecules/Alert",
  "parameters": {
    "componentSubtitle": "Bootstrap Alert Component",
    "docs": {
      "description": {
        "component": "Alerts are available for any length of text, as well as an optional close button. For proper styling, use one of the eight required contextual classes (e.g., .alert-success)."
      },
      "story": {
        "inline": true
      }
    }
  },
  "argTypes": {
    "type": {
      "name": "Alert type",
      "description": "Bootstrap includes several predefined alert type styles.",
      "defaultValue": "",
      "control": "select",
      "options": {
        "'- none -'": "",
        "Primary": "alert-primary",
        "Secondary": "alert-secondary",
        "Success": "alert-success",
        "Danger": "alert-danger",
        "Warning": "alert-warning",
        "Info": "alert-info",
        "Light": "alert-light",
        "Dark": "alert-dark"
      }
    },
    "dismissible": {
      "name": "Dismissible",
      "description": "It is possible to dismiss any alert inline, When an alert is dismissed, the element is completely removed from the page structure.",
      "defaultValue": true,
      "control": "boolean"
    },
    "content": {
      "name": "Alert content",
      "description": "The content of the alert.",
      "defaultValue": "",
      "control": "text"
    },
    "heading": {
      "name": "Alert heading",
      "description": "Alerts can also contain primary alert heading.",
      "defaultValue": "",
      "control": "text"
    },
    "alert_utility_classes": {
      "name": "Utility Classes",
      "description": "An array of utility classes that can be used to add extra Bootstrap utility classes or custom classes to this component.",
      "control": "object",
      "defaultValue": []
    },
    "attributes": {
      "name": "Attributes",
      "description": "HTML attributes for the alert element.",
      "control": "object",
      "defaultValue": {}
    },
    "dismissible_attributes": {
      "name": "Attributes",
      "description": "Dismiss close button attributes",
      "control": "object",
      "defaultValue": {}
    }
  }
} %}

